{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 400,
  "height": 200,
  "padding": 5,

  "data": [
    {
      "name": "table",
      "url": "https://raw.githubusercontent.com/Alquila/Datavis2022Group1/main/data/cleanData.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        { "type": "aggregate", "groupby": ["country"], "as": ["country_count"] }
      ]
    }
  ],

  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {"events": "rect:mouseover", "update": "datum"},
        {"events": "rect:mouseout",  "update": "{}"}
      ]
    }
  ],

  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {"data": "table", "field": "country"},
      "range": "width",
      "padding": 0.05,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {"data": "table", "field": "country_count"},
      "nice": true,
      "range": "height"
    }
  ],

  "axes": [
    { "orient": "bottom", "scale": "xscale" },
    { "orient": "left", "scale": "yscale" }
  ],

  "marks": [
    {
      "type": "rect",
      "from": {"data":"table"},
      "encode": {
        "enter": {
          "x": {"scale": "xscale", "field": "country"},
          "width": {"scale": "xscale", "band": 1},
          "y": {"scale": "yscale", "field": "country_count"},
          "y2": {"scale": "yscale", "value": 0}
        },
        "update": {
          "fill": {"value": "steelblue"}
        },
        "hover": {
          "fill": {"value": "red"}
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "align": {"value": "center"},
          "baseline": {"value": "bottom"},
          "fill": {"value": "#333"}
        },
        "update": {
          "x": {"scale": "xscale", "signal": "tooltip.country", "band": 0.5},
          "y": {"scale": "yscale", "signal": "tooltip.contry_count", "offset": -2},
          "text": {"signal": "tooltip.country_count"},
          "fillOpacity": [
            {"test": "isNaN(tooltip.country_count)", "value": 0},
            {"value": 1}
          ]
        }
      }
    }
  ]
}